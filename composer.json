{
  "name": "yourvendorname/yourpackagename",
  "description": "Cross-framework module for xxx/yyy",
  "license": "MIT",
  "type": "library",
  "autoload": {
    "psr-4": {
      "YourVendor\\": "src/"
    }
  },
  "require": {
    "php": ">=7.1",
    "thecodingmachine/funky": "^1"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.4.3",
    "phpstan/phpstan": "^0.9",
    "thecodingmachine/phpstan-strict-rules": "^0.9",
    "satooshi/php-coveralls": "^1.0.1",
    "mnapoli/simplex": "^0.4.1",
    "squizlabs/php_codesniffer": "^3.2"
  },
  "scripts": {
    "phpstan": "phpstan analyse src -c phpstan.neon --level=7 --no-progress -vvv",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}